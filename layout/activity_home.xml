<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />
        <Space
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/notification1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_notifications_none_24" />
    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_shopping_basket_24" />
    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_border_24" />
    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/search1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"/>
    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24"
            />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lenearlayot6"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textAlignment="center"
                android:clickable="false"
                android:id="@+id/popular"
                android:textSize="17dp"
                android:textFontWeight="900"
                android:textColor="#A1A1A1"/>

            <TextView
                android:id="@+id/popular1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:clickable="false"
                android:text="Popular"
                android:textColor="#F73B63"
                android:textFontWeight="900"
                android:textSize="17dp" />
            <TextView android:layout_width="25dp"
                android:layout_height="2dp"
                android:id="@+id/txt7"
                android:textAlignment="center"
                android:background="#F73B63"
                android:layout_marginTop="30dp"
                />
        </FrameLayout>
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/mens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textAlignment="center"
                android:text="Mens"
                android:textColor="#A1A1A1"
                android:textFontWeight="900"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mens"
                android:textAlignment="center"
                android:clickable="false"
                android:id="@+id/mens1"
                android:visibility="gone"
                android:textSize="17dp"
                android:textFontWeight="900"
                android:textColor="#F73B63"
                />
            <TextView android:layout_width="15dp"
                android:layout_height="2dp"
                android:id="@+id/txt8"
                android:textAlignment="center"
                android:visibility="invisible"
                android:background="#F73B63"
                android:layout_marginTop="30dp"
                />
        </FrameLayout>
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textAlignment="center"
                android:clickable="false"
                android:text="Womens"
                android:textColor="#A1A1A1"
                android:textFontWeight="900"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/women1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textAlignment="center"
                android:text="Womens"
                android:textColor="#F73B63"
                android:textFontWeight="900"
                android:textSize="17dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt9"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:background="#F73B63"
                android:visibility="invisible" />
        </FrameLayout>
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textAlignment="center"
                android:text="Sale"
                android:textColor="#A1A1A1"
                android:textFontWeight="900"
                android:textSize="17dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sale"
                android:textAlignment="center"
                android:clickable="false"
                android:visibility="gone"
                android:id="@+id/sale1"

                android:textSize="17dp"
                android:textFontWeight="900"
                android:textColor="#F73B63"/>
            <TextView android:layout_width="10dp"
                android:layout_height="2dp"
                android:id="@+id/txt10"
                android:textAlignment="center"
                android:visibility="invisible"
                android:background="#F73B63"
                android:layout_marginTop="30dp"
                />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lenearlayot7"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lenearlayot6">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter  &amp; Sort"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textFontWeight="900"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/sorttool"
        android:layout_marginStart="8dp"/>
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/morebutton"
            />

    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_grid_view_list"
        android:verticalSpacing="10dp"
        android:numColumns="auto_fit"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:horizontalSpacing="10dp"
        tools:listitem="@layout/card_view_grid_item"
        app:layout_constraintTop_toBottomOf="@+id/lenearlayot7"
       android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>