<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardCornerRadius="7dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bglayout1"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_img1"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/hoodie1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tv_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:fontFamily="sans-serif"
android:text="Printed Shirt"
        android:textColor="#000000"
        android:textFontWeight="900"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tv_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginStart="5dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.06"
android:text="Geeta Collection"
        android:textColor="#A1A1A1"
        android:textFontWeight="700"
        android:textSize="10dp"



        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_img1"
        app:layout_constraintTop_toBottomOf="@+id/tv_txt1" />

    <ImageView
        android:id="@+id/iv_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toEndOf="@+id/tv_txt1"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tv_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="28"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textFontWeight="900"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img1"
        app:layout_constraintTop_toBottomOf="@+id/tv_txt1" />

    <TextView
android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:id="@+id/tv_txt4"
        android:textColor="#000000"
        android:textFontWeight="900"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/tv_txt3"
        app:layout_constraintTop_toBottomOf="@+id/tv_txt1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/rectangle10"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img2">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/decrease1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="20dp" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"


            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/value1"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/increase1"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>